{
  "name": "archref-react",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --coverage --watchAll false",
    "eject": "react-scripts eject",
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "lint": "./node_modules/.bin/eslint --fix \"./src/**/*.{ts,tsx,js,jsx}\"",
    "prettier": "prettier --write . \"./src/**/*.{ts,tsx,js,jsx}\"",
    "format": "prettier \"./src/**/*.{ts,tsx}\" --write",
    "new:page": "plop --plopfile ./generators/plopfile.js page",
    "new:component": "plop --plopfile ./generators/plopfile.js component",
    "prepare": "husky install",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "date-fns": "^2.27.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-router-dom": "^6.0.2",
    "react-scripts": "4.0.3",
    "styled-components": "^5.3.3",
    "typescript": "^4.5.0",
    "web-vitals": "^2.1.2"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.4.3",
    "@storybook/addon-essentials": "^6.4.3",
    "@storybook/addon-links": "^6.4.3",
    "@storybook/addon-viewport": "^6.4.3",
    "@storybook/node-logger": "^6.4.3",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.4.3",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.11",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.2",
    "@types/styled-components": "^5.1.16",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-babel-plugin-root-import": "^1.1.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^5.1.3",
    "plop": "^3.0.1",
    "prettier": "^2.4.1",
    "source-map-explorer": "^2.5.2",
    "storybook-addon-outline": "^1.4.1"
  },
  "resolutions": {
    "babel-loader": "8.1.0"
  },
  "lint-staged": {
    "./src/*": [
      "npm run lint --fix"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      },
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "html"
    ],
    "collectCoverageFrom": [
      "**/*.{tsx,jsx,ts}",
      "!src/**/*.stories.{tsx,jsx,ts}"
    ],
    "coveragePathIgnorePatterns": [
      "index.ts",
      "styles.ts",
      "global.ts",
      "theme.ts",
      "api.ts",
      "interfaces.ts",
      "reportWebVitals.ts",
      "\\.d\\.ts$",
      "/src/routes/",
      "/src/common/utils/",
      "/src/configs/",
      "/src/containers/",
      "/node_modules/",
      "/src/index.tsx"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
